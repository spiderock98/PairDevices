<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">
            <img src="images/bootstrap-solid.svg" width="30" height="30" class="d-inline-block align-top" alt="">
            ootstrap
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="#lstDevices">
                        <i class="fas fa-plug"></i> Devices
                        <span class="sr-only">(current)</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#about">
                        <i class="fas fa-address-card"></i> About
                    </a>
                </li>
            </ul>
            <button id="btnOut" type="button" class="btn btn-outline-danger">Log Out</button>
        </div>
    </nav>


    <div>
        <!-- Button trigger modal -->
        <button id="btnAdd" type="button" class="btn btn-block btn-outline-success" data-toggle="modal"
            data-target="#exampleModalScrollable">
            New Devices
        </button>
        <!-- Modal -->
        <div class="modal fade" id="exampleModalScrollable" tabindex="-1" role="dialog"
            aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-scrollable" role="document">
                <form action="/home/newDevices" method="POST" id="formDevice" class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalScrollableTitle">Modal title</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="container-fluid">
                            <div class="row align-items-center">
                                <div class="col-md-auto"><label for="name">Device Name</label></div>
                                <input class="col" id="name" type="text" name="name" placeholder="Device Name">
                            </div>
                            <div class="row align-items-center">
                                <div class="col-md-auto"><label for="loc">Location</label></div>
                                <input class="col" id="loc" type="text" name="loc" placeholder="Location">
                            </div>
                            <div class="row align-items-center">
                                <div class="col-sm-auto"><label for="ssid">SSID</label></div>
                                <input class="col" id="ssid" type="text" name="ssid" placeholder="SSID">
                                <div class="col-sm-auto"><label for="psk">Password</label></div>
                                <input class="col" id="psk" type="text" name="psk" placeholder="Password">
                            </div>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <div id="lstDevices">
        <h2>Available Devices</h2>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Status</th>
                    <th scope="col">Locat</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">1</th>
                    <td>Pump Water</td>
                    <td><i class="fas fa-check"></i> Online</td>
                    <td>Home</td>
                </tr>
                <tr>
                    <th scope="row">2</th>
                    <td>Lighter</td>
                    <td><i class="fas fa-times-circle"></i> Offline</td>
                    <td>Home</td>
                </tr>
            </tbody>
        </table>
    </div class="center-block">
</body>

<script src="javascripts/home-client.js"></script>

